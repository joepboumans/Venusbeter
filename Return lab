int S_Beacon;// =Sensor pin
int IRVolt;
int Ex = 0;
float MapIR;
float Volt_Low;//=lowvalue
float Volt_High;//=highvalue

void SearchLab(int Sensor){
  int CurrOut = 0;
  int PrevOut = 0;
  while (1){
    CurrOut = analogRead(Sensor);
    if (CurrOut < (PrevOut-15)){
      TurnLeft();
      break;
    }
    else{
      PrevOut = CurrOut;
      TurnRight(); //Keep going in a circle until the intensity starts lowering
    }
  }
}

void CheckCourse(int Sensor){
  int CurrOut = 0;
  int PrevOut = 0;
  while (1){
    Forward();
    CurrOut = analogRead(Sensor);
    if (CurrOut < (PrevOut-15)){
      stopRobot();
      break;
    }
    else{
      PrevOut = CurrOut;
    }
  }
}

void ReturnLab(){
while(analogRead(S_Beacon)<100){
  SearchLab();
  CheckCourse();
  }
}


