int LS=A0;
int RS=A1;
int US=A3;
int ULTRASOUNDSERVO=13;

int CheckRock(int PinLoc){
  if(digitalRead(PinLoc) ==0){
    return 0;
  }else{ return 1;
}
}
#include<Servo.h>

void setup()
{
  Serial.begin(9600)
  pinMode(LS, INPUT);
  pinMode(RS, INPUT);
  pinMode(US, INPUT);
  pinMode(LEFTSERVO, OUTPUT);
  pinMode(RIGHTSERVO, OUTPUT);
}

void loop()
{
 
  if(digitalRead(LS) && !digitalRead(RS) )// Turn Left
  { turnleft();}
  if(!digitalRead(LS) && digitalRead(RS) )// Turn Right
  {turnright(); }
   if(digitalRead(LS) && digitalRead(RS) ) //Go forward
  { forward(distanceF,forwardspeedF);
  distancefront=USmeasure();
  check(distancefront);

  }
  
}
void check(int cm){
if (CheckRock(US) && cm<=5)
{stopRobot();
pickup(forwardtime);
ReturnLab();
return;
}

}

 
