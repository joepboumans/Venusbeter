#include <Servo.h>
const int pingPin = 9;
const float rotatespeed = 0.5;
Servo USservo;
Servo servoRight;
Servo servoLeft;
bool left = false;
bool right = false;

void setup() {
  USservo.attach(11);
  Serial.begin(9600);
  delay(500);
  servoRight.attach(13);
  servoLeft.attach(12);
  }

void loop() {
  int m = USmeasure(135);
  //delay(50);
  if(m<30) left=true;
  else left=false;
  //delay(200);
  int n = USmeasure(65);
  //delay(50);
  if(n <25) right=true;
  else right = false;
  //delay(200);
  if(right && !left){
      TurnLeft(45);
  }
  else if(left && !right){
      TurnRight(45);
  }
  else if(left && right){
    TurnLeft(180);
  }
  else{
      servoRight.write(0);
      servoLeft.write(180);
  }
}

int USmeasure(int angle){
  USservo.write(angle);
  delay(200);
  long duration, inches, cm;
  pinMode(pingPin, OUTPUT);
  digitalWrite(pingPin, LOW);
  delayMicroseconds(2);
  digitalWrite(pingPin, HIGH);
  delayMicroseconds(5);
  digitalWrite(pingPin, LOW);
  pinMode(pingPin, INPUT);
  duration = pulseIn(pingPin, HIGH);
  cm = duration / 29 / 2;
  return cm;
}
void TurnLeft(int degrees) {
    float result;
    result = (degrees / (rotatespeed * 360)) * 1000;
    Serial.println("Result computed: ");
    Serial.print(result);
    Serial.println();
    delay(10);
    servoLeft.write(0);
    servoRight.write(0);
    delay(result);
    servoLeft.write(90);
    servoRight.write(90);
}

void TurnRight(int degrees){
float result;
    result = (degrees / (rotatespeed * 360)) * 1000;
    Serial.println("Result computed: ");
    Serial.print(result);
    Serial.println();
    delay(10);
    servoLeft.write(180);
    servoRight.write(180);
    delay(result);
    servoLeft.write(90);
    servoRight.write(90);
}
